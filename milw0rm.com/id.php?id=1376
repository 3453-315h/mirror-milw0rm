       struct sockaddr_in addr;
       SOCKET sock;

       char szHeader[1000], szWebUrl[1000];

       lstrcpy(szWebUrl, argv[1]);
       lstrcpy(szHeader, HttpHeader(szWebUrl));

       if( WSAStartup(0x0101,&amp;wsaData) &lt; 0 )
       {
               fprintf(stderr, &quot;Winsock error!\n&quot;);
               return -1;
       }

